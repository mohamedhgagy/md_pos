<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_form_md" model="ir.ui.view">
        <field name="name">hr.employee.form.md.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="md_settings" string="MD Settings">
                    <group>
                        <group name="md_accounting" string="Accounting">
                            <field name="default_account_id" />
                            <field name="journal_id" />

                        </group>
                        <group name="md_inventory" string="Inventory">
                            <field name="warehouse_id" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>