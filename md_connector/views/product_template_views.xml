<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_md" model="ir.ui.view">
        <field name="name">product.template.form.md.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="MD Info">
                    <group>
                        <field name="short_name" />
                        <field name="md_product_id" readonly="1"/>
                        <field name="brand_name" readonly="1"/>
                        <field name="category_name" readonly="1"/>
                        <field name="status" readonly="1"/>
                        <field name="in_stock" readonly="1"/>
                        <field name="stock_limit" readonly="1"/>
                        <field name="safe_stock" readonly="1"/>
                        <field name="md_vat" readonly="1"/>
                    </group>

                </page>
            </xpath>
        </field>
    </record>

</odoo>
