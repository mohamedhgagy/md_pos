<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                <page string="Info">
                    <group>
                        <field name="md_pos_id" readonly="1"/>
                        <field name="md_account_id" readonly="1"/>
                        <field name="name_ar" readonly="1"/>
                        <field name="owner_name" readonly="1"/>
                        <field name="manager_name" readonly="1"/>
                        <field name="super_name" readonly="1"/>
                        <field name="supervisor_id" readonly="1"/>
                        <field name="supervisor_email" readonly="1"/>
                        <field name="supercisor_phone" readonly="1"/>
                    </group>
                    <group>
                         <field name="rep_name" readonly="1"/>
                        <field name="rep_id" readonly="1"/>
                        <field name="special_access_group" readonly="1"/>
                        <field name="pos_phone" readonly="1"/>
                        <field name="contracting_date" readonly="1"/>
                        <field name="license_cr" readonly="1"/>
                        <field name="channel_name" readonly="1"/>
                        <field name="pool_name" readonly="1"/>
                        <field name="registration" readonly="1"/>
                        <field name="status" readonly="1"/>
                    </group>
                </page>
                <page string="Address" name="address">
                    <group>
                        <field name="city"/>
                        <field name="region"/>
                        <field name="district"/>
                        <field name="langitute"/>
                        <field name="latitude" />
                    </group>
                </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
