    <record id="pwd_connector_list_view" model="ir.ui.view">
        <field name="name">pwd.connector.list.view</field>
        <field name="model">pwd.connector</field>
        <field name="arch" type="xml">
            <tree string="pwd Connector">
                <field name="business_name"/>
                <field name="md_user"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="pwd_connector_form_view" model="ir.ui.view">
        <field name="name">pwd.connector.form.view</field>
        <field name="model">pwd.connector</field>
        <field name="arch" type="xml">
            <form string="pwd Connector">
                <header>
                    <div class="col-12">
                                <button name="action_authenticate" type="object" string="Authenticate"
                                     class="oe_stat_button btn-success mx-2 px-2" style="float:right !important;"
                                        attrs="{'invisible': [('authenticated', '=', True)]}"
                                />

                                <button name="action_authenticate" type="object" string="Refresh Token"
                                     class="oe_stat_button btn-success mx-2 px-2" style="float:right !important;"
                                        attrs="{'invisible': [('authenticated', '=', False)]}"
                                        context="{'refresh_token': True}"
                                />

                    </div>

<!--                    <field name="state" widget="statusbar" -->
<!--                        statusbar_visible="authenticate,authenticated"/>-->
                </header>
                <sheet>

                    <group name="md_info">
                        <group>
                            <field name="authenticated" readonly="1" />
                            <field name="business_name" />
                            <field name="base_url" />
                            <field name="md_user" />
                            <field name="md_password" password="True" />
                            <field name="company_id" password="True" />
                            <field name="md_token" groups="base.group_no_one" invisible="1" readonly="1"
                                   force_save="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

