<!--                        <field name="supercisor_phone" readonly="1"/>-->
                    </group>

                    <group>
<!--                         <field name="name" readonly="1"/>-->
<!--                        <field name="rep_id" readonly="1"/>-->
<!--                        <field name="special_access_group" readonly="1"/>-->
<!--                        <field name="pos_phone" readonly="1"/>-->
<!--                        <field name="contracting_date" readonly="1"/>-->
<!--                        <field name="license_cr" readonly="1"/>-->
<!--                        <field name="channel_name" readonly="1"/>-->
<!--                        <field name="pool_name" readonly="1"/>-->
<!--                        <field name="registration" readonly="1"/>-->
<!--                        <field name="status" readonly="1"/>-->
                    </group>
                </page>

                </notebook>
            </xpath>
        </field>
    </record>


    <record id="action_server_res_users" model="ir.actions.server">
            <field name="name">Poll user</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="binding_model_id" eval="False"/>
            <field name="state">code</field>
            <field name="code">action = model.action_poll_res_user()</field>
        </record>
</odoo>
